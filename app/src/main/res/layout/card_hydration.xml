<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="16dp">

        <!-- Your card content goes here -->

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_Hydration"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_hydration_goal"
            android:textSize="14sp"/>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#0000FF"
            android:progressTintMode="src_atop"
            android:indeterminate="false"
            android:indeterminateTint="#0000FF"
            android:indeterminateTintMode="src_atop"
            android:indeterminateAnimationDuration="1000"

            app:progress="50"
            app:progressTint="#0000FF"
            app:progressTintMode="src_atop"
            app:indeterminate="false"
            app:indeterminateTint="#0000FF"
            app:indeterminateTintMode="src_atop"
            app:indeterminateAnimationDuration="1000"

            />

        <!-- Add more views as needed -->

    </LinearLayout>
</androidx.cardview.widget.CardView>